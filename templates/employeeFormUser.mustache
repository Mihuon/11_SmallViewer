<h2>{{title}}</h2>
<form method="post">
    <div class="form-group">
        <label for="login">Uživatelské jméno</label>
        <input type="text" class="form-control" id="login" name="login" value="{{employee.login}}" required>
        {{#errors.login}}<div class="d-block invalid-feedback">{{errors.login}}</div>{{/errors.login}}
    </div>
    <div class="form-group">
        <label for="password">Heslo</label>
        <input type="text" class="form-control" id="password" name="password" value="{{employee.password}}" required>
        {{#errors.password}}<div class="d-block invalid-feedback">{{errors.password}}</div>{{/errors.password}}
    </div>
    <div class="form-group">
        <label for="admin">Administrátor</label>
        <input disabled type="number" class="form-control" id="admin" name="admin" value="{{employee.admin}}" required>
        {{#errors.admin}}<div class="d-block invalid-feedback">{{errors.admin}}</div>{{/errors.admin}}
    </div>
    <div class="form-group">
        <label for="name">Jméno</label>
        <input type="text" class="form-control" id="name" name="name" value="{{employee.name}}" required>
        {{#errors.name}}<div class="d-block invalid-feedback">{{errors.name}}</div>{{/errors.name}}
    </div>
    <div class="form-group">
        <label for="surname">Příjmení</label>
        <input type="text" class="form-control" id="surname" name="surname" value="{{employee.surname}}" required>
        {{#errors.surname}}<div class="d-block invalid-feedback">{{errors.surname}}</div>{{/errors.surname}}
    </div>
    <div class="form-group">
        <label for="job">Pozice</label>
        <input type="text" class="form-control" id="job" name="job" value="{{employee.job}}" required>
        {{#errors.job}}<div class="d-block invalid-feedback">{{errors.job}}</div>{{/errors.job}}
    </div>
    <div class="form-group">
        <label for="wage">Plat</label>
        <input type="number" class="form-control" id="wage" name="wage" value="{{employee.wage}}" required>
        {{#errors.wage}}<div class="d-block invalid-feedback">{{errors.wage}}</div>{{/errors.wage}}
    </div>
    <div class="form-group">
        <label for="room">Místnost</label>
        <input type="number" class="form-control" id="room" name="room" value="{{employee.room}}" required>
        {{#errors.room}}<div class="d-block invalid-feedback">{{errors.room}}</div>{{/errors.room}}
    </div>
        <label>Klíče</label>
    <div class="form-group">
        {{#keysActive}}
    <input type="checkbox" id="{{rId}}" name="keys[]" checked value="{{rId}}">
    <label for="{{rId}}">{{rNa}}</label><br>
        {{/keysActive}}
        {{#keysUnactive}}
    <input type="checkbox" id="{{rId}}" name="keys[]" value="{{rId}}">
    <label for="{{rId}}">{{rNa}}</label><br>
        {{/keysUnactive}}
    </div>

    {{#employee.employee_id}}<input type="hidden" name="employee_id" value="{{employee.employee_id}}">{{/employee.employee_id}}

    <button type="submit" class="btn btn-primary mt-3">Odeslat</button>
</form>